<ul class="breadcrumb">
	{foreach $items as $item}
	{if $iterator->isLast()}

	<li class="active">{$item->label}</li>
	{else}
	<li>
	{ifset $item->id}
		<a href="{$item->url}">{$item->label}</a> <span class="divider">/</span>
	{else}
		<a href="/">{$item->label}</a> <span class="divider">/</span>
	{/ifset}
	</li>
	{/if}
	{/foreach}
</ul>

